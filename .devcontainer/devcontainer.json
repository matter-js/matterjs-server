// Dev container notes for developers:
//
// You do not need to use a dev container with matterjs-server. Native development should work fine. Further, due to
// networking idiosyncrasies, devices running in a dev container may not be discoverable outside the container on macs
// and windows.
//
// For the same reasons as above, the dev container is useful for local testing. Running matterjs-server in the container
// allows it to connect to other components running in docker.
//
// Using Docker desktop you must set default containers to be dual IPv4/IPv6. On macs the options "Use kernel
// networking for UDP" and "Enable host networking" must be enabled.
//
// Claude Code support:
// This dev container includes Claude Code with a security firewall for safe unattended operation.
// The firewall restricts network access to only necessary services (npm, GitHub, Claude API, etc.).
// To run Claude Code without permission prompts: claude --dangerously-skip-permissions

{
	"name": "matterjs-server",

	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/matterjs-server",

	"remoteUser": "node",

	"postCreateCommand": "/bin/bash ./.devcontainer/post-create.sh",
	"postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
	"waitFor": "postStartCommand",

	"forwardPorts": [5580],

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"azureDnsAutoDetection": false,
			"installDockerBuildx": true,
			"installDockerComposeSwitch": false,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		}
	},

	"containerEnv": {
		"NODE_OPTIONS": "--max-old-space-size=4096",
		"CLAUDE_CONFIG_DIR": "/home/node/.claude",
		"POWERLEVEL9K_DISABLE_GITSTATUS": "true"
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"anthropic.claude-code",
				"rioj7.command-variable",
				"stkb.rewrap",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"eamodio.gitlens"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "explicit"
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					}
				}
			}
		}
	}
}
